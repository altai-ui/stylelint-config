{
  "extends": ["../css/base.json", "stylelint-config-standard-scss"],
  "rules": {
    "selector-class-pattern": null,
    "selector-pseudo-class-no-unknown": [
      true,
      { "ignorePseudoClasses": ["deep"] }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.{html,vue,svelte}"],
      "customSyntax": "postcss-html"
    }
  ]
}
